{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Solution",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run Tests",
			"command": "dotnet",
			"args": [
				"test",
				"--logger",
				"console",
				"--verbosity",
				"detailed"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}